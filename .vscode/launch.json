  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Hardhat",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "/home/hdn/.nvm/versions/node/v14.19.1/bin/npx",
      "runtimeArgs": ["hardhat", "--network", "localhost", "run"],
